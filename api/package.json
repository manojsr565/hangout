{
  "name": "api",
  "version": "1.0.0",
  "description": "Azure Functions API for dating planner notifications",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["azure-functions", "typescript", "email-notifications"],
  "author": "",
  "license": "ISC",

  "dependencies": {
    "@azure/communication-email": "^1.0.0",
    "@azure/functions": "^4.8.0",
    "applicationinsights": "^2.9.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  }
}
